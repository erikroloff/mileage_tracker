<!-- create a form that can be used by both the new and edit actions -->

<%= form_for(@model) do |f| %>
  <% if @model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@model.errors.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% @model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- fill in the rest of the form here -->
<%= f.label :make_id %><br/>
<%= f.collection_select :make_id, @makes, :id, :name, :prompt => 'Please select make' %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.submit "Submit Name", class: "btn btn-large btn-primary" %>

<% end %>
